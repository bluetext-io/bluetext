# Environment Variables Template
# Copy this file to .env and uncomment/set the values you need

# =============================================================================
# HTTP SERVER CONFIGURATION (Required)
# =============================================================================
HTTP_HOST=0.0.0.0
HTTP_PORT=8000
HTTP_RELOAD=false

# =============================================================================
# POSTGRESQL CONFIGURATION (Uncomment if using PostgreSQL)
# =============================================================================
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=myapp
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password_here
# POSTGRES_POOL_MIN=1
# POSTGRES_POOL_MAX=10

# =============================================================================
# COUCHBASE CONFIGURATION (Uncomment if using Couchbase)
# =============================================================================
# COUCHBASE_HOST=localhost
# COUCHBASE_USERNAME=admin
# COUCHBASE_PASSWORD=your_password_here
# COUCHBASE_BUCKET=mybucket
# COUCHBASE_PROTOCOL=couchbase

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# LOG_LEVEL=INFO
# API_VERSION=1.0.0
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080